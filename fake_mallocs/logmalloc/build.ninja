cxx = g++

rule app
    command = $cxx -O2 -std=c++11 -g -ldl $in -o $out
    description = building app $out

rule shared_lib
    command = $cxx -std=c++11 -fPIC -shared -g -ldl $in -o $out
    description = building shared lib. $out

build always: phony

build liblogmalloc.so: shared_lib logmalloc.cpp
